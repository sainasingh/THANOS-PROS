

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $DRAGON_REPO == "DRAGONBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1BST0JPWS1PUC9QUk8tVVNFUkJPVC9hcmNoaXZlL1Byby56aXA=" | base64 -d
    elif [[ $DRAGON_REPO == "DRAGONBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1BST0JPWS1PUC9QUk8tVVNFUkJPVC9hcmNoaXZlL1Byby56aXA=" | base64 -d
    elif [[ $DRAGON_REPO =~ $regex ]]
    then
        if [[ $DRAGON_REPO_BRANCH ]]
        then
            echo "${DRAGON_REPO}/archive/${DRAGON_REPO_BRANCH}.zip"
        else
            echo "${DRAGON_REPO}/archive/Dragon.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1BST0JPWS1PUC9QUk8tVVNFUkJPVC9hcmNoaXZlL1Byby56aXA=" | base64 -d
    fi
}


_dragon_bot () {
    local zippath
    zippath="Dargon.zip"
    echo "  ğ“†©ğŸ”± Downloading Pro DragonBot-V3.0 Source Code...ğŸ”±ğ“†ª"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  ğ“†©ğŸ”¥Unpacking Data...ğŸ”¥ğ“†ª"
    DARGONPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo " ğŸ’¥ Download Complete Now Installing ğŸ’¥"
    echo "  âœ¨ğŸ’« INSTALLING ğ–¤ğ“†©Â©Lá´‡É¢á´‡É´á´…x-Proâ„¢ğ“Š‰ âœ¨ğŸ’«"
    rm -rf "$zippath"
    sleep 5
    cd $DRAGONPATH
    echo "    ğŸ—¡Starting Pro DragonáºÃ¸tğŸ—¡     "
    echo " ğŸ¤ŸğŸ» NOW WAIT 1 MIN INSTALLING ALL PLUGIN ğŸ¤ŸğŸ»"

    python3 ../setup/updater.py ../requirements.txt requirements.txt
